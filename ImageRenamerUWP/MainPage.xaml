<Page
    x:Class="ImageRenamerUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageRenamerUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
        <Button x:Name="OpenButton" Click="OpenButton_ClickAsync" HorizontalAlignment="Center" FontSize="36">📂</Button>
        <ListBox x:Name="PreviewList" HorizontalAlignment="Center" MaxHeight="700"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="RenameButton" Click="RenameButton_ClickAsync" FontSize="36">⚙</Button>
            <Button x:Name="CancelButton" Click="CancelButton_Click" FontSize="36">❌</Button>
            <Button x:Name="ExitButton" Click="ExitButton_Click" FontSize="36">🚪</Button>
        </StackPanel>
    </StackPanel>
</Page>
